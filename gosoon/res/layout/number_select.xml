<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/numberselectbutton_leftButton"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/btn_less" />

    <TextView
        android:id="@+id/numberselectbutton_textView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/corners_text_view"
        android:gravity="center" />

    <ImageButton
        android:id="@+id/numberselectbutton_rightButton"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/btn_add" />

</LinearLayout>
