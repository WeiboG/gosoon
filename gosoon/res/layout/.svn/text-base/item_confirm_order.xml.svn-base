<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp"
     >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal" >

        <ImageView 
	        style="@style/order_confirm_item_image"
	        android:src="@drawable/tmp_order_item"
	        />
		<RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_marginLeft="10dp"
		    android:gravity="bottom"
		    android:orientation="vertical" >
	
		    <TextView
		        android:id="@+id/tv_products_name_item"
		        style="@style/products_item_name"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="超大佳沛新西兰金奇异果" />
	
		    <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/tv_products_name_item"
		        android:orientation="horizontal" >
	
		        <TextView
			        android:id="@+id/label_products_size"
			        style="@style/products_item_size"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/label_products_size" />
		        <TextView
			        android:id="@+id/tv_products_size"
			        style="@style/products_item_size"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="4个装" />
		    </LinearLayout>
	
		    <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:layout_alignParentBottom="true"
		         >
				<TextView
			        android:id="@+id/label_products_number"
			        style="@style/products_item_size"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/label_products_number" 
			        android:layout_gravity="bottom"/>
		        <TextView
			        android:id="@+id/tv_products_number"
			        style="@style/products_item_size"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="bottom"
			        android:text="2" />
		        
		        <TextView
		            android:id="@+id/label_products_amount"
		            style="@style/products_item_size"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="15dp"
		            android:layout_gravity="bottom"
		            android:text="@string/label_amount" />
		        
		        <TextView
		            android:id="@+id/tv_products_price_promote"
		            style="@style/products_item_price_promote"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="bottom"
		            android:text="36" />
	
		    </LinearLayout>
		</RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/products_item_price_market" />

</LinearLayout>
