<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="114dp"
        android:background="#F39801"
        android:layout_weight="4"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:scaleType="center"
            android:layout_weight="0.7"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/bonus_gosoon_img"
            />
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:textSize="30sp"
            android:layout_weight="2"
            >
            <TextView
                android:id="@+id/tv_bonus_money" 
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:text="20.00"
	            android:textSize="36sp"
	            android:gravity="top"
	            android:layout_centerInParent="true"
	            android:textColor="@color/white"
            />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textSize="20sp"
                android:text="￥"
                android:id="@+id/money_sign"
                android:layout_toLeftOf="@id/tv_bonus_money"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                />
            
        </RelativeLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginBottom="5dp"
            >
            <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:text="最小订单金额："
	            android:gravity="center"
	            android:textSize="16sp"
	            android:layout_marginLeft="20dp"
	            android:textColor="@color/white"
           		/>
            <TextView 
                android:id="@+id/tv_bonus_limit_order_money"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:text="50.00"
	            android:gravity="left|center"
	            android:textSize="18sp"
	            android:layout_marginRight="10dp"
	            android:textColor="@color/white"
           		/>
        </LinearLayout>
    </LinearLayout>
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="114dp"
        android:src="@drawable/fenge"
        android:scaleType="fitXY"
        />
    <LinearLayout 
        android:layout_width="0dp"
         android:layout_height="114dp"
        android:orientation="vertical"
        android:background="#8fc320"
        android:layout_weight="2"
        >
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <TextView 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="使用截止时间:"
                android:gravity="center|bottom"
                android:textSize="13sp"
                android:layout_weight="1"
                android:textColor="@color/white"
                />
             <TextView
                android:id="@+id/tv_bonus_end_use_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="2014-09-10"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_weight="1"
                android:textColor="@color/white"
                />
            
        </LinearLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/tv_bonus_use_state" 
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:gravity="center"
                android:text="立即使用"
                android:textSize="18sp"
                android:textColor="@color/white"
                
                />
        </LinearLayout>
        
    </LinearLayout>
</LinearLayout>
